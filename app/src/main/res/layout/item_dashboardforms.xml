<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:layout_margin="30dp"
    android:layout_marginTop="30dp">






    <!-- Application Received -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:weightSum="3"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/totalapplications"
            android:src="@drawable/totalapplications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Total Applications Received:"
            android:textColor="#366988"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14dip"
            android:textStyle="bold"
            android:typeface="sans"/>

    <TextView
        android:id="@+id/textView1_aadhaar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right|center_horizontal|center_vertical"
        android:layout_centerVertical="true"
        android:paddingBottom ="9dip"
        android:text="eeee"
        android:textColor="#366988"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dip"
        android:textStyle="bold"
        android:typeface="sans"/>
</LinearLayout>

<!-- Total Payment -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:weightSum="3"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/totalpayment"
            android:src="@drawable/payment"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/x2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="Total Payment Received:"
            android:gravity="center|center_horizontal|center_vertical"
            android:textColor="#366988"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14dip"
            android:textStyle="bold"
            android:typeface="sans"/>
    <TextView
        android:id="@+id/textView2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:text="eeee"
        android:gravity="right|center_horizontal|center_vertical"
        android:textColor="#366988"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dip"
        android:textStyle="bold"
        android:typeface="sans"/>
</LinearLayout>



    <!-- HDFC -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:weightSum="3"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/hdfc"
            android:src="@drawable/hdfc"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/x3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="HDFC:"
            android:gravity="center|center_horizontal|center_vertical"
            android:textColor="#366988"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14dip"
            android:textStyle="bold"
            android:typeface="sans"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:layout_centerVertical="true"
        android:text="eeee"
        android:textColor="#366988"
        android:gravity="right|center_horizontal|center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dip"
        android:textStyle="bold"
        android:typeface="sans" />
        </LinearLayout>



<!-- PNB -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:weightSum="3"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/pnb"
            android:src="@drawable/pnb"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/xq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Punjab National Bank"
            android:textColor="#366988"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14dip"
            android:textStyle="bold"
            android:typeface="sans"/>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:layout_centerVertical="true"
        android:text="eeee"
        android:textColor="#366988"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dip"
        android:gravity="right|center_horizontal|center_vertical"
        android:textStyle="bold"
        android:typeface="sans"/>
        </LinearLayout>


    <!-- LMK -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:weightSum="3"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/lmk"
            android:src="@drawable/lmk"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Lokmitra Kendra"
            android:textColor="#366988"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14dip"
            android:textStyle="bold"
            android:typeface="sans"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_weight="1.2"
        android:text="eeee"
        android:gravity="right|center_horizontal|center_vertical"
        android:textColor="#366988"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dip"
        android:textStyle="bold"
        android:typeface="sans" />
</LinearLayout>

    <!-- Offline Payment -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:weightSum="3"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/offline"
            android:src="@drawable/offline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="Offline Applications:"
            android:textColor="#366988"
            android:gravity="center|center_vertical|center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14dip"
            android:textStyle="bold"
            android:typeface="sans"/>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_weight="1.2"
        android:text="eeee"
        android:textColor="#366988"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dip"
        android:gravity="right|center_horizontal|center_vertical"
        android:textStyle="bold"
        android:typeface="sans"/> />

        </LinearLayout>


</LinearLayout>

