<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="5">

    <LinearLayout
        android:id="@+id/ll1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.0" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#e6e6e6"
            android:layout_height="match_parent">




            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:padding="5dp"
                android:id="@+id/address_details"
                android:background="#ffffff"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#366988"
                    android:textStyle="bold"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:padding="5dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:textColor="#366988"
                        android:textStyle="bold"
                        android:text="Select Post:"
                        android:padding="5dp"/>

                    <Spinner
                        android:id="@+id/district"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:textColor="#000000" />

                </LinearLayout>

            </LinearLayout>






        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_weight="0.8" >



            <LinearLayout
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ListView
                    android:id="@+id/list_data"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent">

                </ListView>

                </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="bottom|center_horizontal|center_vertical"
        android:layout_height="match_parent"
        android:layout_weight="2.2" >

        <LinearLayout
            android:id="@+id/lay3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="bottom"
            android:gravity="right|center_horizontal|center_vertical"
            android:background="#F2F2F2"
            android:layout_margin="3dp"
            android:layout_below="@+id/address_details">

            <Button
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#366988"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:text="Back"
                android:layout_margin="5dp"
                android:textSize="14dp"/>





        </LinearLayout>
    </LinearLayout>

</LinearLayout>





