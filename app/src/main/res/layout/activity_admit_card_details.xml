<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rightLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:weightSum="3">

    <!-- ImageView -->

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#366988"
        android:gravity="left|center_vertical|center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/ImageUser"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/postname"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center|center_horizontal|center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Buttons -->

    <LinearLayout
        android:id="@+id/laydetails"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:background="#40666666"
        android:layout_margin="5dp"
        android:layout_weight="2.2" >

        <ScrollView
            android:id="@+id/mainScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Department Name -->
                <LinearLayout
                    android:id="@+id/textview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:visibility="visible"
                    android:layout_margin="5dp"
                    android:orientation="vertical">


                    <TextView
                        android:text="Name"
                        android:textColor="#366988"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        />

                    <TextView
                        android:textColor="#3d3d29"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        />
                </LinearLayout>

                <!-- Post Code -->
                <LinearLayout
                    android:id="@+id/textview3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:text="Father's/Husband's  Name"
                        android:textColor="#366988"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        />

                    <TextView
                        android:textColor="#3d3d29"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/fhname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        android:text=""/>
                </LinearLayout>

                <!-- Details -->
                <LinearLayout
                    android:id="@+id/textview2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:visibility="visible"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:text="Roll Number"
                        android:textColor="#366988"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        />


                    <TextView
                        android:textColor="#3d3d29"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/rollno"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"/>
                </LinearLayout>



                <!-- Post ID  visibility Gone-->
                <LinearLayout
                    android:id="@+id/textview4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:visibility="gone"
                    android:layout_margin="5dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/postid"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        android:text=""/>
                </LinearLayout>

                <!-- Pub  date -->
                <LinearLayout
                    android:id="@+id/textview5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:text="Address"
                        android:textColor="#366988"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        />

                    <TextView
                        android:textColor="#3d3d29"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal|left"
                        android:text=""/>


                </LinearLayout>

                <!-- Last Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:text="District"
                        android:textColor="#366988"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        />

                    <TextView
                        android:textColor="#3d3d29"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/district"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        android:text=""/>


                </LinearLayout>

                <!-- ExamCenter  -->
                <LinearLayout
                    android:id="@+id/textview7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:text="Exam Center"
                        android:textColor="#366988"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        />

                    <TextView
                        android:textColor="#3d3d29"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/examcenter"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        android:text=""/>


                </LinearLayout>
                <!--  ,CenterAddress, -->
                <LinearLayout
                    android:id="@+id/textview8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:text="Center Address"
                        android:textColor="#366988"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        />

                    <TextView
                        android:textColor="#3d3d29"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/centeraddress"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        android:text=""/>


                </LinearLayout>
                <!-- DateofExamination, -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:text="Date of Examination"
                        android:textColor="#366988"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        />

                    <TextView
                        android:textColor="#3d3d29"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/dateofexamination"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        android:text=""/>


                </LinearLayout>
                <!-- ReportingTime-->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:text="Reporting Time"
                        android:textColor="#366988"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        />

                    <TextView
                        android:textColor="#3d3d29"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/reportingtime"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        android:text=""/>


                </LinearLayout>
                <!-- Duration -->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:text="Duration"
                        android:textColor="#366988"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        />

                    <TextView
                        android:textColor="#3d3d29"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/duration"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|left"
                        android:text=""/>


                </LinearLayout>



            </LinearLayout>




        </ScrollView>

    </LinearLayout>


    <!-- Button -->
    <LinearLayout
        android:id="@+id/lay3"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="right|center_horizontal|center_vertical"
        android:background="#F2F2F2"
        android:layout_margin="3dp">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Back"
            android:background="#366988"
            android:textColor="#FFFFFF"
            android:gravity="center|center_horizontal|center_vertical"/>

        <ImageView
            android:id="@+id/signature"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#FF545454"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:gravity="center|center_horizontal|center_vertical"/>




    </LinearLayout>



</LinearLayout>